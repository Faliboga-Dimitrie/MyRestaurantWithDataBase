<Window x:Class="MyRestaurant.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyRestaurant.Views"
        xmlns:vm="clr-namespace:MyRestaurant.ViewModels"
        xmlns:converters="clr-namespace:MyRestaurant.Convertors"
        Title="Meniul Restaurantului" Height="800" Width="1000">

    <Window.Resources>
        <converters:MenuAvailabilityConverter x:Key="MenuAvailabilityConverter"/>
        <converters:IsIndisponibilConverter x:Key="IsIndisponibilConverter"/>
        <converters:AlergenListToStringConverter x:Key="AlergenListToStringConverter"/>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        <Style x:Key="WatermarkedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
           Text="{TemplateBinding Tag}"
           Foreground="Gray"
           Margin="5,0"
           IsHitTestVisible="False"
           VerticalAlignment="Center"
           Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Menu -->
        </Grid.RowDefinitions>

        <!-- Search Section -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <!-- Back button on the right -->
            <Button Content="Înapoi"
            Command="{Binding Back}"
            Width="100"
            DockPanel.Dock="Right"
            HorizontalAlignment="Right"
            Margin="10,0,0,0" />

            <!-- Search section on the left -->
            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                DockPanel.Dock="Left">
                <TextBox Width="200"
                 Style="{StaticResource WatermarkedTextBox}"
                 Tag="Caută denumire..."
                 Text="{Binding SearchByName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox Width="200"
                 Style="{StaticResource WatermarkedTextBox}"
                 Tag="Caută alergen..."
                 Text="{Binding SearchByAlergen, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Filtrează"
                Width="100"
                Command="{Binding FilterCommand}" />
            </StackPanel>
        </DockPanel>

        <!-- Results Display -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredCategoriList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10">
                            <TextBlock Text="{Binding NumeCategorie}" FontWeight="Bold" FontSize="18" Foreground="DarkSlateGray" />

                            <!-- Preparates in Category -->
                            <ItemsControl ItemsSource="{Binding Preparates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                                <Image Width="100" Height="100" Source="{Binding Fotografis[0].Fotografie, Converter={StaticResource ByteArrayToImageConverter}}" Margin="0,0,10,0"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Denumire}" FontSize="16" />
                                                    <TextBlock Text="{Binding CantitatePortie, StringFormat='Portie: {0}g'}"/>
                                                    <TextBlock Text="{Binding Pret, StringFormat='Preț: {0} lei'}"/>
                                                    <TextBlock Text="{Binding Idalergens, Converter={StaticResource AlergenListToStringConverter}, StringFormat='Alergeni: {0}'}"/>
                                                    <TextBlock Text="INDISPONIBIL" Foreground="Red" FontWeight="Bold" Visibility="{Binding CantitateTotala, Converter={StaticResource IsIndisponibilConverter}}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Meniuri in Category -->
                            <ItemsControl ItemsSource="{Binding Meniuris}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="DarkGray" BorderThickness="1" Margin="5" Padding="5">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Denumire}" FontSize="16" FontWeight="SemiBold"/>
                                                <TextBlock Text="Conține:" FontWeight="Bold"/>
                                                <ItemsControl ItemsSource="{Binding MeniuPreparats}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding IdpreparatNavigation.Denumire}" Margin="5,0"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="INDISPONIBIL" Foreground="Red" FontWeight="Bold"
                                                           Visibility="{Binding MeniuPreparats, Converter={StaticResource MenuAvailabilityConverter}}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
