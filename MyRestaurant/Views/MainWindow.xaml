<Window x:Class="MyRestaurant.Views.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="clr-namespace:MyRestaurant.Convertors"
       xmlns:vm="clr-namespace:MyRestaurant.ViewModels"
       xmlns:Views="clr-namespace:MyRestaurant.Views"
       Title="Main Window" Height="600" Width="800">

   <Window.Resources>
       <!-- Converter to toggle visibility -->
       <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
       
       <!--Data template for the main content area-->
        <DataTemplate DataType="{x:Type vm:ViewMenuViewModel}">
            <Views:MenuWindow />
       </DataTemplate>
       <!--<DataTemplate DataType="{x:Type vm:PlaceOrderViewModel}">
           <Views:PlaceOrderView />-->
       <!--</DataTemplate>-->
   </Window.Resources>

   <DockPanel>

       <!-- Top Menu Buttons -->
       <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10" HorizontalAlignment="Center" >
           <Button Content="View Menu" Command="{Binding ShowViewMenuCommand}" Margin="5" Width="100" />
           <Button Content="Place Order" Command="{Binding ShowPlaceOrderCommand}" Margin="5" Width="100" />
           <Button Content="View Orders" Command="{Binding ShowMyOrdersCommand}" Margin="5" Width="100" />

           <!-- Visible only to employees -->
           <Button Content="Edit Menu" Command="{Binding ShowEditMenuCommand}" Margin="5" Width="100"
                   Visibility="{Binding IsEmployee, Converter={StaticResource BoolToVisibilityConverter}}" />
           <Button Content="Edit Orders" Command="{Binding ShowEditOrdersCommand}" Margin="5" Width="100"
                   Visibility="{Binding IsEmployee, Converter={StaticResource BoolToVisibilityConverter}}" />

           <Button Content="Logout" Command="{Binding LogoutCommand}" Margin="5" Width="100" />
       </StackPanel>

       <!-- Main Content Area -->
       <ContentControl Content="{Binding CurrentView}" Margin="10" />

   </DockPanel>
</Window>
