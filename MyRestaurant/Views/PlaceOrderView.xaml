<Window x:Class="MyRestaurant.Views.PlaceOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRestaurant.Views"
        xmlns:converters="clr-namespace:MyRestaurant.Convertors"
        mc:Ignorable="d"
        Title="Plaseaza Comanda" Height="600" Width="800">

    <Window.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:NullToBoolMultiConverter x:Key="NullToBoolMultiConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                   Foreground="Red" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Selection Panels -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <!-- Preparat -->
            <StackPanel Margin="10">
                <TextBlock Text="Selectati preparatul:"/>
                <ComboBox Width="200" ItemsSource="{Binding PreparateList}" 
                          SelectedItem="{Binding SelectedPreparat}" 
                          DisplayMemberPath="Denumire"/>

                <TextBlock Text="Cantitate:" Margin="0,10,0,0"/>
                <TextBox Width="200" Text="{Binding SelectedPreparatQuantity}" />

                <Button Content="Adauga Preparat" Margin="0,10,0,0"
                        Command="{Binding AddPreparat}">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource NullToBoolMultiConverter}">
                            <Binding Path="SelectedPreparat"/>
                            <Binding Path="SelectedPreparatQuantity"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </StackPanel>

            <!-- Meniu -->
            <StackPanel Margin="10">
                <TextBlock Text="Selectati meniul:"/>
                <ComboBox Width="200" ItemsSource="{Binding MeniuriList}" 
                          SelectedItem="{Binding SelectedMeniu}" 
                          DisplayMemberPath="Denumire"/>

                <TextBlock Text="Cantitate:" Margin="0,10,0,0"/>
                <TextBox Width="200" Text="{Binding SelectedMeniuQuantity}" />

                <Button Content="Adauga Meniu" Margin="0,10,0,0"
                        Command="{Binding AddMeniu}">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource NullToBoolMultiConverter}">
                            <Binding Path="SelectedMeniu"/>
                            <Binding Path="SelectedMeniuQuantity"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Ordered Items -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <StackPanel Margin="20">
                <TextBlock Text="Preparate in comanda:" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding OrderedPreparate}" Width="300" Height="200"
                         SelectedItem="{Binding SelectedPreparat}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding PreparatName}" Margin="0,0,10,0"/>
                                <TextBlock Text=" x "/>
                                <TextBlock Text="{Binding ComandaPreparat.Cantitate}" Margin="5,0"/>
                                <Button Content="Sterge" Command="{Binding DataContext.RemovePreparat, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Margin="10,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Margin="20">
                <TextBlock Text="Meniuri in comanda:" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding OrderedMeniuri}" Width="300" Height="200"
                         SelectedItem="{Binding SelectedMeniu}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding MeniuName}" Margin="0,0,10,0"/>
                                <TextBlock Text=" x "/>
                                <TextBlock Text="{Binding ComandaMeniu.Cantitate}" Margin="5,0"/>
                                <Button Content="Sterge" Command="{Binding DataContext.RemoveMeniu, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Margin="10,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Plaseaza Comanda" Command="{Binding PlaceOrder}" Width="150" Margin="10"/>
            <Button Content="Inapoi" Command="{Binding BackToMain}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
